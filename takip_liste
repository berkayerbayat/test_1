SELECT 
T.PROCESS_DATE   AS  TARIH,
T.ETL_DATE   AS  DATA_TARIHI,
T.CUSTOMER_NUM   AS  MUSTERI_NO,
C.CUSTOMER_LONG_NAME   AS  MUSTERI_ADI,
C.SME_TYPE   AS  KOBI,
C.RISK_GROUP_CODE   AS  RGK,
T.LOAN_REFERENCE   AS  KREDI_NUMARASI,
T.PROSECUTION_INIT_DATE   AS  TAKIP_INTIKAL_TARIHI,
T.PROSECUTION_CUR_AMOUNT   AS  TAKIP_ANAPARA,
T.PROC_CUR_REES_AMOUNT   AS  TAKIP_REESKONT,
( T.PROSECUTION_CUR_AMOUNT + T.PROC_CUR_REES_AMOUNT ) AS TAKIP_BAKIYE,
T.LOAN_CLASS   AS  KREDI_SINIFI,
T.BRANCH_ID   AS  SUBE_KODU,
T.CURR_CODE   AS  PARA_KODU,
T.GL_ACCOUNT_NUM   AS  DK_NUMARASI ,
T.ACCOUNT_NUM   AS  HESAP_NO,
T.PROSECUTION_INIT_AMOUNT_ORG   AS  TAKIP_INTIKAL_BAKIYE_ORJ,
T.PROSECUTION_PRINCIPAL_AMOUNT   AS  KREDI_ANAPARA,
T.ORG_USAGE_DATE   AS  ORJ_KULLANDIRIM_TARIHI,
T.ORG_DUE_DATE   AS  ORJ_VADE,
T.ORG_GL_ACCOUNT_NUM   AS  TAKIP_ONCESI_DK,
T.ORG_OPEN_BAL_AMNT_TL   AS  KREDI_ORJ_ACILIS_TUTARI,
T.ORG_EXTENSION_DATE   AS  ORJ_TEMDIT_TARAIHI,
T.PROSECUTION_ENDING_DATE   AS  TAKIP_KAPANIS_TARIHI,
T.PROSECUTION_INIT_AMOUNT   AS  TAKIP_INTIKAL_BAKIYESI,
C.SECTOR_CODE   AS  NACE_KOD,
C.FINANCE_CODE   AS  FKK,
T.PRM_VEHICLETYPE   AS  KREDI_ADI
FROM TGARYSR.TDM_LOAN_LEGITIMATE_PROC T
left join TGARYSR.TDWINPA C
on T.PROCESS_DATE=C.PROCESS_DATE
and T.CUSTOMER_NUM=C.IP_ID
where T.PROCESS_DATE = TO_DATE(20240829,'YYYYMMDD')
AND (T.PROSECUTION_CUR_AMOUNT <>0 OR T.PROC_CUR_REES_AMOUNT <>0)
